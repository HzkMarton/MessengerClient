<Window x:Class="MessengerClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MessengerClient"
        mc:Ignorable="d"
        Title="Messeger" Height="450" Width="600" ResizeMode="CanMinimize">
    <Window.Resources>
        <Style TargetType="Window">
            <Setter Property="FontFamily" Value="Trebuchet MS"></Setter>
        </Style>
        <Style TargetType="{x:Type Button}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" BorderBrush="Black" BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="Transparent"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid>

        <Border CornerRadius="15, 0, 15, 15" BorderThickness="1" Grid.Row="1" Height="33" Margin="0,0,10,0" Padding="0" Panel.ZIndex="1" HorizontalAlignment="Right" Background="CadetBlue" MouseEnter="LightenBtn" MouseLeave="DarkenBtn">
            <Button Content="Elküld" Name="Send" Click="SendMessage" BorderThickness="0" Foreground="White" Height="33" Width="80" Background="Transparent" FontSize="20" RenderTransformOrigin="1.053,0.275"/>
        </Border>
        <Border CornerRadius="15, 0, 15, 15" BorderThickness="1" Background="#DCDCDC"  Grid.Row="1" Height="33" Margin="10,0,10,0" Padding="3">
            <TextBox Name="txtBox" HorizontalAlignment="Stretch" BorderThickness="0" TextWrapping="Wrap" VerticalAlignment="Center" RenderTransformOrigin="1.446,2.99" Height="33" FontSize="20" Padding="0,0,80,0" Background="Transparent" KeyDown="txtBox_KeyDown"/>
        </Border>
        <ScrollViewer x:Name="scrollViewerMessages" Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" VerticalScrollBarVisibility="Hidden" Margin="0,20,0,0" Panel.ZIndex="1">
            <StackPanel x:Name="messageBubbleContainer">
                <AccessText Text="Üzenetek helye" HorizontalAlignment="Center" Margin="0,10,0,0" Foreground="Gray"/>
            </StackPanel>
        </ScrollViewer>
        <Border Background="White" HorizontalAlignment="Left" VerticalAlignment="Top" Panel.ZIndex="2">
        <Image HorizontalAlignment="Left" Height="50" VerticalAlignment="Top" Width="50" Source="/assets/logo.png"/>
        </Border>
        <Label Content="Messager" HorizontalAlignment="Left" FontSize="30" Height="50px" VerticalAlignment="Top" Background="#FFFFFF" Width="135" Margin="50,0,0,0" Panel.ZIndex="2"/>
        <Grid.RowDefinitions>
            <RowDefinition Height="85*"></RowDefinition>
            <RowDefinition Height="15*"></RowDefinition>
        </Grid.RowDefinitions>

    </Grid>
</Window>
